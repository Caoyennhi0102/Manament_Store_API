@model Manament_Store_API.Models.NgonNgu
@{
    ViewBag.Title = "EditLanguage";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";  // Đường dẫn Layout
}
@*
    @{
        bool isSessionActive = (bool)ViewBag.IsSessionActive;
    }
*@
<h2>CẬP NHẬT NGÔN NGỮ</h2>
<link rel="stylesheet" href="~/Content/EditLanguage.css">
<form action="@Url.Action("EditLanguage","Language", new {id = Model.IDNgonNgu})"method="post">
    <input type="hidden" name="IDNgonNgu" value="@Model.IDNgonNgu"/>
    <div class="form-group">
        <label for="MaNgonNgu">Mã Ngôn Ngữ</label>
        <input type="text" class="form-control" id="MaNgonNgu" name="MaNgonNgu" value="@Model.MaNgonNgu" required/>
    </div>
    <div class="form-group">
        <label for="TenNgonNgu">Tên Ngôn Ngữ</label>
        <input type="text" class="form-control" id="TenNgonNgu" name="TenNgonNgu" value="@Model.TenNgonNgu"required/>
    </div>
    <div class="form-check">
        
        <input type="checkbox" id="NgonNguMacDinh" name="NgonNguMacDinh" class="form-check-input" @(Model.NgonNguMacDinh ? "checked" : "") />
        <label for="NgonNguMacDinh">Ngôn Ngữ Mặc Định</label>
    </div>
    <button type="submit" class="btn btn-primary">Lưu Cập Nhật</button>
</form>

