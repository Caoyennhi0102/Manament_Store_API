@using Manament_Store_API.Models
@using System.Web.Mvc
@{
    var languages = (List<Manament_Store_API.Models.NgonNgu>)ViewBag.Languages;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Page.Title - Hệ THỐNG QUẢN LÝ CỬA HÀNG TIỆN LỢi</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Sidebar.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


    @RenderSection("head", required: false)




</head>
<body>

    <!-- Container for the layout -->
    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <div class="col-md-3 sidebar d-flex flex-column">

                <div class="user-name mt-2">
                    <h4 class="text-white">@Session["HoTen"]</h4>
                </div>
                <style>
                    .sidebar {
                        height: 100vh;
                        overflow-y: auto;
                        overflow-x: hidden;
                        background-color: #0094ff;
                        color: white;
                        padding: 10px;
                    }
                </style>


                <div class="list-group">

                    @*  @if (Session["UserName"] != null)
                        {
                    *@
                    <!-- Menu Quản lý cửa hàng   -->
                    <!-- Language Selection -->

                    <div id="language-dropdown">
                        <select id="language-select" class="form-select">
                            <option value="">-- Chọn ngôn ngữ --</option>
                        </select>
                    </div>
                    <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="collapse" data-bs-target="#StoreFunctions" aria-expanded="false" aria-controls="StoreFunctions">
                        <i class="bi bi-shop-window"></i> QUẢN LÝ CỬA HÀNG
                    </a>
                    <div class="collapse" id="StoreFunctions">
                        <a href="/AddStore/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-plus-circle"></i> Thêm Cửa Hàng
                        </a>
                        <a href="/UpdateStore/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-pencil-square"></i> Cập Nhật Thông Tin Cửa Hàng
                        </a>
                        <a href="/DeleteStore/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-trash"></i> Xóa Cửa Hàng
                        </a>
                    </div>
                    <!-- Menu Quản lý bộ phận -->
                    <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="collapse" data-bs-target="#departmentFunctions" aria-expanded="false" aria-controls="departmentFunctions">
                        <i class="bi bi-house-door-fill"></i> QUẢN LÝ BỘ PHẬN
                    </a>
                    <div class="collapse" id="departmentFunctions">
                        <a href="/CreateDepartments/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-plus-square"></i>Thêm bộ phận
                        </a>
                        <a href="/UpdateDepartments/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-pencil-square"></i>Cập nhật thông tin bộ phận
                        </a>
                        <a href="/DeleteDepartments/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-x-circle"></i>Xóa bộ phận
                        </a>
                    </div>
                    <!-- Menu Quản lý chức vụ -->
                    <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="collapse" data-bs-target="#positionFunctions" aria-expanded="false" aria-controls="positionFunctions">
                        <i class="bi bi-person-lines-fill"></i> QUẢN LÝ CHỨC VỤ
                    </a>
                    <div class="collapse" id="positionFunctions">
                        <a href="/AddPosition/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-plus-circle"></i> Thêm chức vụ
                        </a>
                        <a href="/UpdatePositionDefault/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-pencil-square"></i> Cập nhật chức vụ
                        </a>
                        <a href="/DeletePosition/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-trash-fill"></i> Xóa chức vụ
                        </a>
                    </div>
                    <!-- Menu Quản lý User -->
                    <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="collapse" data-bs-target="#userFunctions" aria-expanded="false" aria-controls="userFunctions">
                        <i class="bi bi-people-fill"></i> QUẢN LÝ USER
                    </a>
                    <div class="collapse" id="userFunctions">
                        <a href="/AddUser/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-person-plus-fill"></i> Thêm User
                        </a>
                        <a href="/UpdateUser/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-pencil-fill"></i> Cập nhật User
                        </a>
                        <a href="/DeleteUser/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-person-x-fill"></i> Xóa User
                        </a>
                        <a href="/LockUser/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-lock-fill"></i> Khóa User
                        </a>
                        <a href="/UnlockUser/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-unlock-fill"></i> Mở khóa User
                        </a>

                        <a href="/CreatePermissions/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-person-plus-fill"></i> Tạo Quyền User
                        </a>
                        <a href="/UpdatePermissions/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-gear-wide-connected"></i> Cập nhật quyền
                        </a>
                        <a href="/DeletePermissions/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-trash"></i> Xóa quyền
                        </a>
                        <a href="/GrantingPermissions/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-key-fill"></i> Cấp quyền User
                        </a>
                        <a href="/RevokePermissions/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-key"></i> Thu quyền User
                        </a>
                    </div>
                    <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="collapse" data-bs-target="#employeeFunctions" aria-expanded="false" aria-controls="employeeFunctions">
                        <i class="bi bi-people-fill"></i> QUẢN LÝ NHÂN VIÊN
                    </a>
                    <div class="collapse" id="employeeFunctions">
                        <a href="/AddEmployee/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-person-plus-fill"></i> Thêm nhân viên
                        </a>
                        <a href="/UpdateEmployee/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-person-badge"></i> Cập nhật thông tin nhân viên
                        </a>
                        <a href="/DeleteEmployee/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-person-x-fill"></i> Xóa nhân viên
                        </a>

                    </div>
                    <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="collapse" data-bs-target="#generalList" aria-expanded="false" aria-controls="generalList">
                        <i class="bi bi-clipboard-data"></i> Quản Lý Tổng Hợp
                    </a>
                    <div class="collapse" id="generalList">
                        <a href="/GeneralList/GeneralList" class="list-group-item list-group-item-action">
                            <i class="bi bi-table"></i> Danh Sách Tổng Hợp
                        </a>
                    </div>
                    <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="collapse" data-bs-target="#SystemConfigurationSettings" aria-expanded="false" aria-controls="SystemConfigurationSettings">
                        <i class="bi bi-gear"></i> Cài Đặt Cấu Hình Hệ Thống
                    </a>
                    <div class="collapse" id="SystemConfigurationSettings">
                        <a href="/ImageSettings/EditImage" class="list-group-item list-group-item-action">
                            <i class="bi bi-image"></i> Thay Ảnh
                        </a>
                    </div>
                    <div class="collapse" id="SystemConfigurationSettings">
                        <a href="/Language/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-globe"></i> Ngôn Ngữ
                        </a>
                    </div>
                    <div class="collapse" id="SystemConfigurationSettings">
                        <a href="/Translation/Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-translate"></i> Bản Dịch Ngôn Ngữ
                        </a>
                    </div>
                    <!-- Nút Logout -->
                    <a href="@Url.Action("Logout", "LogOut")" class="list-group-item list-group-item-action text-danger">
                        <i class="bi bi-box-arrow-right"></i> Đăng xuất
                    </a>
                    @*
                        }
                        else
                        {
                             <!-- Nút Login -->
                    *@
                    <!-- Hiển thị đăng nhập nếu người dùng chưa đăng nhập -->
                    <a href="@Url.Action("Login", "Login")" class="list-group-item list-group-item-action">
                        <i class="fa fa-key" style="color:gold;"></i> Đăng nhập
                    </a>
                    @*}*@
                </div>
            </div>
            <!-- Main Content Area -->
            <div class="col-md-9">
                @RenderBody()


            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $.ajax({
                url: "/Language/GetLanguages",
                type: "GET",
                dataType: "json",
                success: function (data) {
                    var dropdown = $("#language-select");
                    dropdown.empty();
                    dropdown.append('<option value="">-- Chọn ngôn ngữ --</option>');
                    $.each(data, function (index, lang) {
                        dropdown.append('<option value="' + lang.IDNgonNgu + '">' + lang.TenNgonNgu + '</option>');
                    });
                },
                error: function () {
                    $("#language-dropdown").html("<p>Lỗi tải danh sách ngôn ngữ!</p>");
                }
            });
        });
    </script>
    <script>
        $(document).on("change", "#language-select", function () {
            var selectedLanguage = $(this).val();
            if (selectedLanguage) {
                $.post("/Language/ChangeLanguage", { languageId: selectedLanguage }, function () {
                    location.reload(); // Reload trang sau khi thay đổi ngôn ngữ
                });
            }
        });
    </script>
</body>
</html> 